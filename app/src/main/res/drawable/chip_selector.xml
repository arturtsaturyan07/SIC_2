<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Active blue, change to your theme color if needed -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Pressed state (not selected) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#BBDEFB"/> <!-- Light blue when pressed -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3E7EA" /> <!-- Light gray for unselected -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>