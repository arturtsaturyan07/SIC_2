<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:divider="?android:attr/listDivider"
        android:dividerPadding="8dp"
        android:showDividers="middle">

        <!-- Notification Toggle -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical">
            <TextView android:text="Remind me before event"
                android:textSize="16sp" android:textColor="#222"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/switch_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Favorite Toggle -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:paddingTop="10dp">
            <TextView android:text="Mark as favorite"
                android:textSize="16sp" android:textColor="#222"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ToggleButton
                android:id="@+id/toggle_favorite"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:background="@drawable/toggle_star_selector"
                android:textOn=""
                android:textOff=""
                android:checked="false"/>
        </LinearLayout>

        <!-- Visibility/Archive -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:paddingTop="10dp">
            <TextView android:text="Hide this card from list"
                android:textSize="16sp" android:textColor="#222"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/switch_visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Category Selector -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Category" android:textColor="#222" android:textSize="16sp"
            android:paddingTop="13dp" />
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Repeat Option -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Repeat"
            android:textColor="#222" android:textSize="16sp"
            android:paddingTop="13dp"/>
        <Spinner
            android:id="@+id/spinner_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Color Picker -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Card Color"
            android:textColor="#222" android:textSize="16sp"
            android:paddingTop="13dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical">
            <View
                android:id="@+id/color_preview"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#2196F3"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#2196F3"
                android:elevation="2dp"/>
            <Button
                android:id="@+id/btn_color_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Color"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- Custom Title -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Custom Title" android:textColor="#222" android:textSize="16sp"
            android:paddingTop="13dp"/>
        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rename card or event"
            android:textColor="#222"
            android:textSize="15sp"
            android:background="@drawable/rounded_corners"
            android:padding="7dp"/>
        <Button
            android:id="@+id/renameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rename Card"
            android:layout_below="@id/edit_title"
            android:layout_marginTop="8dp"
            android:visibility="visible"/>

        <!-- Notes Field -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Notes" android:textColor="#222" android:textSize="16sp"
            android:paddingTop="13dp"/>
        <EditText
            android:id="@+id/edit_notes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Add notes or description"
            android:textColor="#222"
            android:textSize="15sp"
            android:gravity="top|start"
            android:background="@drawable/rounded_corners"
            android:padding="7dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:maxLines="4"/>

        <!-- Share, Delete, Reset Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="24dp">
            <Button
                android:id="@+id/shareButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Share"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:backgroundTint="@color/light_gray"
                android:textColor="#333"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>