<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Card Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimg"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <!-- Favorite Star -->
        <ImageView
            android:id="@+id/starView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignTop="@id/recImage"
            android:layout_toEndOf="@id/recImage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="gone"
            app:tint="@color/star_yellow" />
        <ImageView
            android:id="@+id/storyBadge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/recImage"
            android:layout_alignEnd="@id/recImage"
            android:src="@drawable/ic_add_story"
            android:background="@drawable/circle_bg"
            android:visibility="gone"/>

        <!-- Card Title -->
        <TextView
            android:id="@+id/recTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Title"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Priority/Type Badge -->
        <TextView
            android:id="@+id/recPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/priority_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Priority"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <!-- Description or Notes -->
        <TextView
            android:id="@+id/recDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recImage"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Description"
            android:textColor="@color/lavender"
            android:textSize="14sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>