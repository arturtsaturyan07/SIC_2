<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Container for other users' messages (left-aligned) -->
    <LinearLayout
        android:id="@+id/message_container_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_other_user_message"
        android:orientation="vertical"
        android:layout_gravity="start"
    android:visibility="gone">

    <TextView
        android:id="@+id/message_text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>

    <!-- Container for current user's messages (right-aligned) -->
<LinearLayout
android:id="@+id/message_container_me"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="12dp"
android:background="@drawable/bg_current_user_message"
android:orientation="vertical"
android:layout_gravity="end"
android:visibility="gone">

<TextView
android:id="@+id/message_text_me"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Message"
android:textColor="@android:color/white"
android:textSize="16sp" />

</LinearLayout>
    </LinearLayout>