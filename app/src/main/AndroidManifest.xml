<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/camp_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/camp_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        tools:targetApi="31">
        <activity
            android:name=".SharedCardsAdapter"
            android:exported="false" />
        <activity
            android:name=".SharedCard"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            tools:ignore="DuplicateActivity" />
        <activity
            android:name=".VerifyEmailActivity"
            android:exported="false" />
        <activity
            android:name=".EventDecorator"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".CampConfigActivity"
            android:exported="false" />
        <activity
            android:name=".UserAddActivity"
            android:exported="false" />
        <activity
            android:name=".User"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".UserSearchActivity"
            android:exported="true" />
        <activity
            android:name=".CardActivity"
            android:exported="false" />
    </application>

</manifest>